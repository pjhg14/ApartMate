<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<GridPane alignment="center" hgap="10" prefHeight="255.0" prefWidth="225.0" vgap="10" xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.graham.apartmate.ui.windows.loginwindow.LoginController">
    <children>
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="ApartMate" textAlignment="CENTER" GridPane.columnIndex="0"
              GridPane.rowIndex="0">
            <font>
                <Font name="System Bold Italic" size="66.0"/>
            </font>
        </Text>

        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="login:" textAlignment="CENTER" GridPane.columnIndex="0"
              GridPane.rowIndex="1"/>

        <TextField fx:id="usernameField" promptText="Username" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
        <PasswordField fx:id="passwordField" promptText="Password" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
        <Button fx:id="loginButton" mnemonicParsing="false" onAction="#submitCredentials" text="Login"
                GridPane.rowIndex="5"/>
        <Text fx:id="errorText" fill="RED" strokeType="OUTSIDE" strokeWidth="0.0" text="Error: Must Provide Credentials"
              visible="false" GridPane.rowIndex="4"/>
    </children>

    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
    </padding>
    <columnConstraints>
        <ColumnConstraints/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
        <RowConstraints/>
    </rowConstraints>

</GridPane>
